{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6", "dom", "es2020.string"],
    "typeRoots": [     
      "./node_modules/@types"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "app",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
        "app/*": [
          "./app/*"
        ],
      }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
